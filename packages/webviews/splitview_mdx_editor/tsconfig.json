{
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2024",
        "allowUmdGlobalAccess": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "noEmit": true,
        "allowJs": false,
        "skipLibCheck": true,
        "rootDir": "src",
        "lib": [
            "ES2024",
            "DOM",
            "DOM.Iterable"
        ],
        "esModuleInterop": true,
        "verbatimModuleSyntax": false,
        "outDir": "splitview_mdx_editor",
        "strict": true
    },
    "exclude": [
        "splitview_mdx_editor"
    ],
    "include": [
        "src"
    ]
}
